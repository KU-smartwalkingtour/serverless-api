{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@models/*": ["models/*"],
      "@models": ["models"],
      "@routes/*": ["routes/*"],
      "@routes": ["routes"],
      "@utils/*": ["utils/*"],
      "@utils": ["utils"],
      "@middleware/*": ["middleware/*"],
      "@middleware": ["middleware"],
      "@config/*": ["config/*"],
      "@config": ["config"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "checkJs": false,
    "allowJs": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "dist", "coverage", "build.js"]
}
